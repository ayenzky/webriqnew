ul
    &.resp-tabs-list
        margin 0px
        padding 0px

.resp-tabs-list
    li
        font-weight 300
        font-size 16px
        display inline-block
        background-color transparent !important
        padding 0px 5px
        margin 0px 5px
        list-style none
        cursor pointer
        float left
        width 180px
        vertical-align top
        text-align center
        color #f2f2f2
        span
            clear both
            line-height 1.6
            display block
            width 100%
            margin-right 10px

.resp-tabs-container
    padding 0px
    background-color transparent !important
    clear left
    .resp-accordion
        background-color transparent !important
        border-color #fff !important
        span
            &.tools-name
                font-weight 100
                font-size 16px
                color #fff

h2
    &.resp-accordion
        cursor pointer
        padding 5px
        display none
        font-size 13px
        border 1px solid #c1c1c1
        border-top 0px solid #c1c1c1
        margin 0px
        padding 10px 15px
        &:first-child
            border-top 1px solid #fff
    &.resp-tab-active
        border-bottom 0px solid #c1c1c1 !important
        margin-bottom 0px !important
        padding 10px 15px !important
        background #DBDBDB
        span
            &.resp-arrow
                &::before
                    content "\f146"
    &.resp-tab-title
        &:last-child
            border-bottom 12px solid #c1c1c1 !important
            background blue

.resp-tab-content
    display none
    margin-bottom 3em
    float left

.resp-content-active, .resp-accordion-active
    display block

.resp-vtabs
    ul
        &.resp-tabs-list
            float left
            width 30%
    .resp-tabs-list
        li
            display block
            padding 15px 15px !important
            margin 0 0 4px
            cursor pointer
            float none
    .resp-tabs-container
        padding 0px
        background-color #fff
        border 1px solid #c1c1c1
        float left
        width 68%
        min-height 250px
        border-radius 4px
        clear none
    .resp-tab-content
        border none
        word-wrap break-word
    li
        &.resp-tab-active
            position relative
            z-index 1
            margin-right -1px !important
            padding 14px 15px 15px 14px !important
            border-top 1px solid
            border 1px solid #5AB1D0 !important
            border-left 4px solid #5AB1D0 !important
            margin-bottom 4px !important
            border-right 1px #FFF solid !important

.resp-arrow
    &::before
        width 0
        height 0
        float right
        margin-right 25px
        margin-top 60px
        content "\f0fe"
        font-family FontAwesome
        font-size 30px
        text-rendering auto
        -webkit-font-smoothing antialiased
        font-smoothing antialiased
        color #fff

.resp-easy-accordion
    h2
        &.resp-accordion
            display block
    .resp-tab-content
        border 1px solid #c1c1c1
        &:last-child
            border-bottom 1px solid #c1c1c1

.resp-jfit
    width 100%
    margin 0px

.resp-tab-content-active
    display block

@media only screen and (max-width: 768px)
    ul
        &.resp-tabs-list
            display none
    h2
        &.resp-accordion
            display block
    .resp-vtabs
        .resp-tab-content
            border 1px solid #C1C1C1
            &:last-child
                border-bottom 1px solid #c1c1c1 !important
        .resp-tabs-container
            border none
            float none
            width 100%
            min-height 100px
            clear none
    .resp-accordion-closed
        display none !important