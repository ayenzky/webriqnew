doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Content Manager

    link(rel="stylesheet", href="https://cms.webriq.com/assets/cms.css")
    link(rel="stylesheet", href="/css/style.css")

    script!= "CMS_ENV = \"" + (process.env.CMS_ENV || "development") + "\";"

    base(href="/admin/")
  body
    script(type="text/x-handlebars" data-template-name='cms/preview/posts').
      <div id="main-wrapper">
        <div class="container">
          <!--Content-->
          <article class="box post">
            {{#if entry.banner }}
            {{cms-preview field='banner'}}
            {{/if}}
            <header>
              <h2>{{ entry.title }}</h2>
              <p>{{ entry.shortdesc}}</p>
            </header>
            {{cms-preview field='body'}}
          </article>
        </div>
      </div>

    script(type="text/x-handlebars" data-template-name='cms/preview/characters').
      <div id="main-wrapper">
        <div class="container">
          {{#cms-preview field="data" as |character| }}
            <section class="box">
              <span class="image featured">{{cms-preview field="image" from=character}}</span>
              <header>
                <h3>{{character.name}}</h3>
              </header>
              <p>{{character.description}}</p>
            </section>
          {{/cms-preview}}
        </div>
      </div>

    script(src="//cms.webriq.com/assets/vendor.js")
    script(src="//cms.webriq.com/assets/cms.js")

